<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EarphoneLeftAndRight.Views.PlayPage"
             xmlns:r="clr-namespace:EarphoneLeftAndRight.Resx"
             Title="{x:Static r:AppResources.Play_Title}"
             BackgroundColor="{AppThemeBinding Default=White,Light=White,Dark=Black}"
             xmlns:controls="clr-namespace:EarphoneLeftAndRight.Views"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <controls:AdMobBanner HeightRequest="50" HorizontalOptions="Fill"  WidthRequest="320" Grid.Row="0" />
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Text="{x:Static r:LocalResources.Left}" Clicked="Button_ClickedLeft"/>
                    <Button Grid.Row="0" Grid.Column="1" Text="{x:Static r:LocalResources.Right}" Clicked="Button_ClickedRight"/>
                    <Button Grid.Row="1" Grid.ColumnSpan="2" Text="{x:Static r:LocalResources.LeftRight}" Clicked="Button_ClickedBoth" />
                </Grid>
                <Label Text="{x:Static r:AppResources.More_Title}" FontSize="Large"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>